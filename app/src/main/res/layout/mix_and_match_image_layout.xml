<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mixAndMatchContainer"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="100dp"
    android:layout_height="100dp">

        <ImageButton
            android:id="@+id/mixAndMatchImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:adjustViewBounds="true" />

        <CheckBox
            android:id="@+id/mixAndMatchImageCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            style="@style/CustomCheckBox"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/mixAndMatchCategoryBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_alignParentBottom="true"
            android:background="#caffb637"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textAppearance="@style/ButtonSmallFontStyle"
            android:paddingLeft="0dp"
            android:paddingTop="1dp"
            android:paddingRight="0dp"
            android:paddingBottom="1dp" />
        <ImageView
            android:id="@+id/mixAndMatchOverlay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_centerInParent="true"
            android:background="@drawable/beveled_edge"
            android:foregroundTint="@color/colorSecondaryPurple"
            android:foregroundTintMode="add"
            android:tint="@color/colorSecondaryPurple"
            android:visibility="invisible"/>
        <ProgressBar
            android:id="@+id/mixAndMatchProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

</RelativeLayout>



